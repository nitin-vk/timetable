            <th>CSEA7</th>
            <th>CSEB7</th>
            <th>CSEC7</th>
            <%if(currentUser.username=='hod'){%>
            <th>EDIT</th>
            <%}%>
        </tr>
        <%for(let i of fourthyear){%>
            <tr>
                <td>
                    <%=i.NAME%>
                </td>
                <td>
                    <%=i.CSEA7%>
                </td>
                <td>
                    <%=i.CSEB7%>
                </td>
                <td>
                    <%=i.CSEC7%>
                </td>
                <%if(currentUser.username=='hod'){%>
                    <td>
                        <form action="/subjects/fourthyear/<%=i._id%>"><button>EDIT</button></form>

                    </td>
                    <%}%>

            </tr>
            <%}%>

    </table>
    <%if(currentUser.username=='hod'){%>
        <form action="/subjects/fourthyear" method="post">
